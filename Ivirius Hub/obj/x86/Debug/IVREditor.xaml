<Page
    x:Class="Ivirius_Hub.IVREditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ivirius_Hub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF79D7FF">

    <Grid>
        <Ellipse Height="50" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0" Fill="#FF00B3FF"/>
        <Border BorderThickness="1" Background="#FF00B3FF" Margin="0,80,0,0" Height="150" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <StackPanel Margin="50,45,50,45" Spacing="50" Orientation="Horizontal">
                <Ellipse Height="50" Width="50" Fill="#FF79D7FF" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Ellipse Height="50" Width="50" Fill="#FF79D7FF"/>
                <Ellipse Height="50" Width="50" Fill="#FF79D7FF"/>
                <Ellipse Height="50" Width="50" Fill="#FF79D7FF"/>
                <Ellipse Height="50" Width="50" Fill="#FF79D7FF"/>
            </StackPanel>
        </Border>
        <Border BorderThickness="1" Background="#FF00B3FF" Width="1000" Margin="0,250,0,0" HorizontalAlignment="Center"/>
        <Border Height="50" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,15,0,0" Background="#FF00B3FF" CornerRadius="8,8,8,8"/>

    </Grid>
</Page>

